{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "iOS Auto-Sync: Start",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/auto-sync-ios.js"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "ios-sync",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^âœ… Updated: (.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ðŸŽ iOS Auto-Sync Started",
          "endsPattern": "ðŸ“¡ Watching for changes..."
        }
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "iOS Auto-Sync: Setup",
      "type": "shell",
      "command": "curl",
      "args": ["-O", "http://localhost:3000/auto-sync-ios.js"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "iOS Auto-Sync: Manual Sync",
      "type": "shell",
      "command": "node",
      "args": [
        "-e",
        "require('./auto-sync-ios.js'); setTimeout(() => process.exit(0), 5000);"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "iOS: Clean Build",
      "type": "shell",
      "command": "xcodebuild",
      "args": ["clean", "-project", "Sonetel Mobile.xcodeproj"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "iOS: Build",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project",
        "Sonetel Mobile.xcodeproj",
        "-scheme",
        "Sonetel Mobile",
        "-destination",
        "platform=iOS Simulator,name=iPhone 15"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "iOS: Clean Build"
    }
  ]
}
